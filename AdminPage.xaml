<Page x:Class="smtAzal.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:smtAzal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Border Background="LemonChiffon" BorderBrush="DarkKhaki" BorderThickness="2" CornerRadius="5" Padding="10" Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>
            <TabControl>
                <!-- Appointments Tab -->
                <TabItem Header="Записи">
                    <Frame x:Name="AppointmentsFrame"/>
                </TabItem>

                <!-- Salons Tab -->
                <TabItem Header="Салоны">
                    <Frame x:Name="SalonsFrame"/>
                </TabItem>

                <!-- Services Tab -->
                <TabItem Header="Услуги">
                    <Frame x:Name="ServicesFrame"/>
                </TabItem>
            </TabControl>
            <Button Grid.Row="1" Content="Назад" Margin="5" Click="ButtonBack_Click"/>
        </Grid>
    </Border>
</Page>
